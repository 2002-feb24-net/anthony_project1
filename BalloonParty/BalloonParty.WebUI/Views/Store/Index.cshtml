@model IEnumerable<BalloonParty.DataAccess.SQLData.Store>

@{
    ViewData["Title"] = "Index";
}

<h1>Store Locations</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StoreName)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.StoreUsername)
            </th> *@
            @* <th>
                @Html.DisplayNameFor(model => model.StorePw)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StoreName)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.StoreUsername)
            </td> *@
            @* <td>
                @Html.DisplayFor(modelItem => item.StorePw)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @* <a asp-action="Edit" asp-route-id="@item.StoreId">Edit</a> | *@
                <a asp-action="Details" asp-route-id="@item.StoreId">See Store Details</a> |
                <a asp-controller="StoreInventory" asp-action="Index">See Stores Inventory</a>
                @* <a asp-action="Delete" asp-route-id="@item.StoreId">Delete</a> *@

            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create">Create New Store Location</a>

</p>